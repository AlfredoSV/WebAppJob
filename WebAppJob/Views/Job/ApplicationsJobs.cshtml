@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-10">

   <form>
        <div class="row mb-2">

            <h1>Status of applications</h1>

        </div>

        <hr />
        <div class="row">

            <div class="col-4">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Folio" />
                </div>
            </div>
            <div class="col-4">
                <div class="input-group">
                    <select type="text" class="form-control">
                        <option value="-1">Select a status</option>
                    </select>
                </div>
            </div>
            <div class="col-2">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="User Name" />
                </div>
            </div>
            <div class="col-2">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Email" />
                </div>
            </div>
        </div>

        <div class="row mt-4">

            <div class="col-2">
                <div class="input-group">
                    <input type="date" class="form-control" placeholder="Date Created Init" />
                </div>
            </div>
            <div class="col-2">
                <div class="input-group">
                    <input type="date" class="form-control" placeholder="Date Created End" />
                </div>
            </div>
            <div class="col-2">
                <div class="input-group">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </div>


    </form>

    <div class="row mb-2 mt-5">

        <h3>Results</h3>

    </div>
    <hr />
    
    <div class="row">

        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Handle</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>mdo</td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Jacob</td>
                    <td>Thornton</td>
                    <td>fat</td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>Larry</td>
                    <td>the Bird</td>
                    <td>twitter</td>
                </tr>
            </tbody>
        </table>
    </div>

</div>
