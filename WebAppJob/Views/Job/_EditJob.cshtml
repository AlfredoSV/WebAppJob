@{
    Layout = null;
}

@model JobViewModel

<div class="mb-5">
    <div class="col-12 mb-5">
        <form id="editJobForm">
            <input type="hidden" id="id" />
            <div class="form-group">
                <label class="control-label">Name</label>
                <input asp-for="NameJob" id="name" autocomplete="off" class="form-control" />
                <span id="nameValidationMessage"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Company</label>
                <select asp-for="IdCompany" asp-items="Model.SelectListItemsCompanies" id="idCompany" class="form-control">
                </select>
                <span id="idCompanyValidationMessage"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Salary Max</label>
                <input asp-for="SalaryMax" id="salaryMax" class="form-control" type="number" step="0.1" />
                <span id="salaryMaxValidationMessage"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Salary Min</label>
                <input asp-for="SalaryMin" id="salaryMin" class="form-control" step="0.1" type="number" />
                <span id="salaryMinValidationMessage"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Vacancy Number</label>
                <input asp-for="VacancyNumbers" class="form-control" id="vacancyNumber" type="number"/>
                <span id="vacancyNumberValidationMessage"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Area</label>
                <select asp-for="IdArea" asp-items="Model.SelectListItemsAreas" id="idArea" class="form-control">
                </select>
                <span id="idAreaValidationMessage"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Description</label>
                <textarea asp-for="DescriptionJob" id="description" cols="20" rows="10" class="form-control"></textarea>
                <span id="descriptionValidationMessage"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Active</label>
                <input  asp-for="IsActive" id="isActive" class="form-check-input" type="checkbox" />
                <span id="isActiveValidationMessage"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Edit" class="btn btn-primary btn-lg" />
            </div>
        </form>

    </div>

</div>


