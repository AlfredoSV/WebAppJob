@{
    Layout = null;
}

<div class="mb-5">
    <div class="col-12 mb-5">
        <form id="form" autocomplete="off">
            <input type="hidden" id="id" />
            <div class="form-group">
                <label class="control-label">Name</label>
                <input id="name" disabled class="form-control" />      
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Company</label>
                <select id="idCompany" disabled class="form-control">
                </select>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Salary Max</label>
                <input disabled id="salaryMax" class="form-control" type="number" step="0.1" />         
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Salary Min</label>
                <input id="salaryMin" disabled class="form-control" step="0.1" type="number" />
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Vacancy Number</label>
                <input disabled class="form-control" id="vacancyNumber" type="number" />
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Area</label>
                <select disabled id="idArea" class="form-control">
                </select>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Description</label>
                <textarea disabled id="description" cols="20" rows="10" class="form-control"></textarea>           
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Active</label>
                <input id="isActive" class="form-check-input" type="checkbox" disabled />
            </div>
        </form>

    </div>

</div>


