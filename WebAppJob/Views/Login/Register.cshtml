@model UserViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container text-white m-5">
    <h1>Register</h1>
    <hr />
    <form>
        <div class="row mt-3">
            <div class="col-4">
                <div class="form-group">
                    <label class="control-label">User Name</label>
                    <input type="text" asp-for="UserName" readonly class="form-control" />
                </div>
            </div>

            <div class="col-4">
                <div class="form-group">
                    <label class="control-label">Password</label>
                    <input type="text" asp-for="Password" readonly class="form-control" />
                </div>
            </div>

            <div class="col-4">
                <div class="form-group">
                    <label class="control-label">Confirm Password</label>
                    <input type="text" asp-for="ConfirmPasword" readonly class="form-control" />
                </div>
            </div>



        </div>

        <div class="row mt-3">
            <div class="col-5">
                <div class="form-group">
                    <label class="control-label">Name</label>
                    <input type="text" asp-for="Name" class="form-control" />
                </div>
            </div>

            <div class="col-5">
                <div class="form-group">
                    <label class="control-label">Last Name</label>
                    <input type="text" asp-for="LastName" class="form-control" />
                </div>
            </div>

            <div class="col-2">
                <div class="form-group">
                    <label class="control-label">Age</label>
                    <input type="number" asp-for="Age" class="form-control" />
                </div>
            </div>

        </div>

        <div class="row mt-3">
            <div class="col-5">
                <div class="form-group">
                    <label class="control-label">Email</label>
                    <input type="email" asp-for="Email" class="form-control" />

                </div>
            </div>

            <div class="col-7">
                <div class="form-group">
                    <label class="control-label">Address</label>
                    <textarea cols="10" rows="6" asp-for="Address" class="form-control"></textarea>
                </div>
            </div>

        </div>

        <div class="row mt-3">
            <div class="col d-flex justify-content-center mt-4 ">
                <button class="btn btn-success w-40"
                        type="submit">
                    Edit
                </button>
       
            </div>

        </div>

        <div class="row mt-3">
            <div class="col d-flex justify-content-center">
    
                <a asp-action="Index" asp-fragment="Login">
                    Log in
                </a>

            </div>

        </div>


    </form>



</div>



